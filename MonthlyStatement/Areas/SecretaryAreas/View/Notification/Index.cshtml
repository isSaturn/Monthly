@model IEnumerable<MonthlyStatement.Models.Notification>

@{
    int i = 0;

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h4 class="text-white" style="font-size:1.75rem">Danh sách thông báo các kỳ báo cáo</h4>

                    </div>
                    <div class="card-body">
                        @*<div class="buttons">
                                <a class="btn btn-icon btn-primary" data-original-title="Gửi thông báo" href="@Url.Action("SendMail","Notification")">
                                    Gửi thông báo
                                </a>
                            </div>*@
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-1">
                                <thead>
                                    <tr role="row">
                                        <th class="text-center">STT</th>
                                        <th>Tiêu đề báo cáo</th>
                                        <th>Ngày gửi</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        <tr class="Search">
                                            <td class="text-center">
                                                @i
                                            </td>
                                            <td>
                                                @item.notification_content
                                            </td>
                                            <td>
                                                @item.notification_date
                                            </td>
                                            <td>
                                                <div class="badge badge-success">@item.status</div>
                                            </td>
                                            <td class="text-center">
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



