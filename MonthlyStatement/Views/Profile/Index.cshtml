@model MonthlyStatement.Models.Profile

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Tài khoản:</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.AspNetUser.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Khoa:</p>
                            </div>
                            <div class="col-sm-9">
                                @if (@Model.faculty_id == null)
                                {
                                    <p class="text-muted mb-0">Chưa có khoa</p>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">@Model.Faculty.faculty_name</p>
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Tên:</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.user_name</p>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="col-lg-4">
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editProfile">Chỉnh sửa</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@* button edit profile *@
<div class="modal fade" id="editProfile" tabindex="-1" role="dialog" aria-labelledby="formModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModal">Chỉnh sửa thông tin</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Edit_Profile", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <form class="">
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Email" name="email" value="@Model.AspNetUser.Email" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Khoa</label>
                            <div class="input-group">
                                @if (@Model.faculty_id == null)
                                {
                                    <input type="text" class="form-control" placeholder="Khoa" name="faculty" value="Chưa có khoa" readonly>
                                }
                                else
                                {
                                    <input type="text" class="form-control" placeholder="Khoa" name="faculty" value="@Model.Faculty.faculty_name" readonly>
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Họ và tên" name="name" value="@Model.user_name">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">Lưu thông tin</button>
                            <button type="button" class="btn btn-secondary m-t-15" data-dismiss="modal">Đóng</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {

        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.profile-pic').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $(".file-upload").on('change', function () {
            readURL(this);
        });

        $(".upload-button").on('click', function () {
            $(".file-upload").click();
        });
    });
</script>

