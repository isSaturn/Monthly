@model MonthlyStatement.Models.DepartmentList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card">
                        <div class="card-header bg-primary" style="height:100px">
                            <h4 class="text-white" style="font-size:1.75rem">Tạo mới bộ môn</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            @using (Html.BeginForm("Create", "ListDepartmentMember", FormMethod.Post, new { }))
                            {
                                <!-- Account details card-->
                                <div class="card-header"><b>Thông tin chi tiết</b></div>

                                <div class="card-body" style="margin-top: 0.2rem">
                                    <div class="mb-3">
                                        <!-- Form Group (Tên khoa)-->
                                        <label class="small mb-1">Khoa</label>
                                        @Html.DropDownList("faculty_id", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.faculty_id, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="mb-3">
                                        <!-- Form Group (Tên khoa)-->
                                        <label class="small mb-1">Tên bộ môn</label>
                                        @Html.EditorFor(model => model.department_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.department_name, "", new { @class = "text-danger" })
                                    </div>
                                    <div style="text-align: center; margin-top:1.8rem" class="mb-3">
                                        <button style="width:180px; color:white" type="submit" class="btn btn-primary" onclick="if (!confirm('Tạo khoa mới?')) { return false }">
                                            Tạo mới
                                        </button>
                                        &emsp;
                                        <a style="width:180px; color:white;" role="button" class="btn btn-danger" href="@Url.Action("Index", "Faculty")">
                                            Hủy
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
