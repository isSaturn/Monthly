@model MonthlyStatement.Models.AspNetUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h4 class="text-white" style="font-size:1.75rem">Thông tin tài khoản của @Model.Email</h4>
                    </div>
                </div>
                <div class="col-12">
                @using (Html.BeginForm("Details", "Accounts", FormMethod.Post, new { }))
                {
                    <div class="page-inner mt--5">
                        <div class="row">
                            <div class="col-xl-12">
                                <!-- Account details card-->
                                <div class="card mb-4">
                                    <div class="card-header"><b>Thông tin chi tiết</b></div>
                                    <div class="card-body" style="margin-top: 0.2rem">
                                        <form>
                                            <!-- Form Group (Token)-->
                                            <div class="mb-3">
                                                <label class="small mb-1">ID USER</label>
                                                <input style="color:black" type="text" class="form-control" value="@Model.Id" disabled>
                                            </div>
                                            <!-- Form Group (Email)-->
                                            <div class="mb-3">
                                                <label class="small mb-1">Email</label>
                                                <input style="color:black" type="text" class="form-control" value="@Model.Email" disabled>
                                            </div>
                                            <!-- Form Group (Role)-->
                                            <div class="mb-3">
                                                <label class="small mb-1">Vai trò</label>
                                                <input style="color:black" type="text" class="form-control" value="@Model.AspNetRoles.FirstOrDefault().Name" disabled>
                                            </div>
                                            <div style="text-align: center; margin-top: 1.8rem" class="mb-3">
                                                <a style="width: 180px; color: white; " class="btn btn-warning" role="button" href="@Url.Action("Edit", "Accounts", new { id = Model.Id })">
                                                    Chỉnh sửa thông tin
                                                </a>
                                                &emsp;
                                                <a style="width: 180px; color: white; " class="btn btn-danger" role="button" href="@Url.Action("Index", "Accounts")">
                                                    Quay lại
                                                </a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                 }
                </div>
            </div>
        </div>
    </div>
</section>


