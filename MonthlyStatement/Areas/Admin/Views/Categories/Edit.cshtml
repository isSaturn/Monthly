@model MonthlyStatement.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { }))

{
    <div class="page-inner mt--5">
        <div class="row">
            <div class="col-xl-12">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header"><b>Thông tin chi tiết</b></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.category_id)
                    <div class="card-body" style="margin-top: 0.2rem">
                        @if (Model.category_of_id != null)
                        {
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1">Chọn danh mục cha</label>
                                    @Html.DropDownList("category_of_id", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        }
                        <!-- Form Group (Category Content)-->
                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1">Tên danh mục con</label>
                                @Html.EditorFor(model => model.category_content, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div style="text-align: center; margin-top:1.8rem" class="mb-3">
                            <button style="width:180px; color:white" type="submit" class="btn bg-primary-gradient">
                                Lưu
                            </button>
                            &emsp;
                            <a style="width:180px; color:white;" role="button" class="btn btn-danger" href="@Url.Action("Index", "Categories", new { id = Model.category_id})">
                                Hủy
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

