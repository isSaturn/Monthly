@model MonthlyStatement.Models.Faculty

@{
    int i = 0;
}
@{
    ViewBag.Title = "AttendenceList";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h3 class="text-white" style="font-size:1.75rem">Danh sách thành viên của khoa @Model.faculty_name</h3>
                    </div>
                    <div class="card-body">
                        <div class="col-sm-12 buttons">
                            <button style="color:white" data-toggle="modal" class="btn btn-primary btn-round" data-target="#addUser">
                                <i class="fa fa-plus"></i>
                                Thêm thành viên
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped" id="table-1">
                                <thead>
                                    <tr role="row">
                                        <th class="text-center">
                                            STT
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Tên
                                        </th>
                                        <th>
                                            Khoa
                                        </th>
                                        <th>
                                            Bộ môn
                                        </th>
                                        <th>
                                            Vai trò
                                        </th>
                                        <th class="text-center">
                                            Thao tác
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Profiles)

                                    {
                                        i = i + 1;

                                        <tr>
                                            <td class="text-center">
                                                @i
                                            </td>
                                            <td>
                                                @item.email

                                            </td>
                                            <td>
                                                @if (item.user_name == null)
                                                {
                                                    <span>Chưa có tên</span>
                                                }
                                                else
                                                {
                                                    @item.user_name
                                                }
                                            </td>
                                            <td>
                                                @if (item.Faculty.faculty_name == null)
                                                {
                                                    <span>Chưa có khoa</span>
                                                }
                                                else
                                                {
                                                    @item.Faculty.faculty_name
                                                }
                                            </td>
                                            <td>
                                                @if (item.department == null)
                                                {
                                                    <span>Chưa thêm bộ môn</span>
                                                }
                                                else
                                                {
                                                    @item.department
                                                }
                                            </td>
                                            <td>
                                                @if (item.AspNetUser == null)
                                                {
                                                    <span>Chưa thêm vai trò</span>
                                                }
                                                else
                                                {
                                                    if (item.AspNetUser.AspNetRoles.Count() < 1)
                                                    {
                                                        <span>Chưa thêm vai trò</span>

                                                    }
                                                    else
                                                    {
                                                        @item.AspNetUser.AspNetRoles.FirstOrDefault().Name

                                                    }
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="buttons">
                                                    <a class="btn btn-icon btn-primary" data-original-title="Cấp quyền" href="@Url.Action("Edit", "Accounts", new { id = item.account_id })">
                                                        <i class="far fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="addUser" tabindex="-1" role="dialog" aria-labelledby="formModal"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModal">Chỉnh sửa thông tin</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Edit_Profile", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <form class="">
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Email" name="email" value="" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Khoa</label>
                            <div class="input-group">

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Bộ môn</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Nhập bộ môn" name="bomon" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Nhập họ và tên" name="name" value="">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">Lưu thông tin</button>
                            <button type="button" class="btn btn-secondary m-t-15" data-dismiss="modal">Đóng</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.profile-pic').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $(".file-upload").on('change', function () {
            readURL(this);
        });

        $(".upload-button").on('click', function () {
            $(".file-upload").click();
        });
    });
</script>

