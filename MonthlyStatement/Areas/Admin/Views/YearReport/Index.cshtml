@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content" style="min-height: 676px;">
    <div class="bg-primary">
        <div class="page-inner py-5">
            <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                <div>
                    <h2 class="text-white pb-2 fw-bold">Báo cáo năm</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="page-inner mt--5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div id="add-row_wrapper" class="container-fluid dt-bootstrap4">
                            <div class="row">
                                <div class="col-sm-12 col-md-12">
                                    <div class="dataTables_filter">
                                        <label>
                                            Tìm kiếm
                                            <input class="form-control btn-round" type="text" id="Search" aria-label="Search" data-width="200">
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3">
                                @if (Convert.ToBoolean(Session["ReportYear-Check"]) == true)
                                {
                                    <div class="card">
                                        <button class="btn btn-primary" id="add_report_year">Thêm</button>
                                    </div>
                                }
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6 col-lg-3">
                                    <a class="card card-success" href="#">
                                        <div class="card-header">
                                            <h4>Năm 2022</h4>
                                        </div>
                                        <div class="card-body">
                                            <p>Các kỳ báo cáo năm 2022</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
        $("#add_report_year").click(function () {
            swal({
                title: 'Thêm báo cáo?',
                text: 'Bạn có muốn thêm báo cáo của năm nay không?',
                icon: 'warning',
                buttons: true,
                dangerMode: true,
            })
                .then((willAdd) => {
                    if (willAdd) {
                        $.ajax({
                            type: "POST",
                            traditional: true,
                            async: false,
                            cache: false,
                            url: $('#requestUrl').val() + 'YearReport/Create',
                            context: document.body,
                            success: function (result) {
                                if (result == "Success") {
                                    $("#add_report_year").replaceWith("");
                                    swal('Thêm thành công', {
                                        icon: 'success',
                                    });
                                } else {
                                    swal(result, {
                                        icon: 'error',
                                    });
                                }
                            },
                            error: function (xhr) {
                                swal(xhr.responseText, {
                                    icon: 'error',
                                });
                                //debugger;
                                console.log(xhr.responseText);
                                alert("Error has occurred..");
                            }
                        });

                    }
                });
        });

    });

</script>