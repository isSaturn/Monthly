@model MonthlyStatement.Models.DepartmentReport
@using MonthlyStatement.Models
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
    int j = 64;
    string lstId = "";

    CP25Team04Entities models = new CP25Team04Entities();
    int idperiod = Model.report_period_id;
    int idDepartmentReport = Model.department_report_id;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h4 class="text-white" style="font-size:1.75rem">Báo cáo bộ môn: @Model.AspNetUser.Email</h4>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            @foreach (var items in models.FormDepartmentReports.FirstOrDefault(f => f.report_period_id == idperiod).FormDepartmentReportDetails.ToList())
                            {
                                if (items.Category.category_of_id == null)
                                {
                                    i = 0;
                                    j++;
                                    <br />
                                    <div class="section-title mt-1" style="font-weight:bold">
                                        @(((char) j).ToString()). @items.Category.category_content.ToUpper()

                                    </div>
                                }
                                else
                                {
                                    lstId += items.category_id + "-";
                                    i++;
                                    <div class="section-title mt-0 row" style="margin-bottom:1px; padding-left:0.25rem">
                                        <div class="col-lg-12">
                                            <input hidden id="dem-@items.category_id" value="@models.DepartmentReportDetails.Where(p => p.form_department_report_detail_id == items.form_department_report_detail_id).Count()" />
                                            <input hidden id="frmPerDetail-@items.category_id" value="@items.form_department_report_detail_id" />
                                            <table class="table table-bordered dataTable">
                                                <tbody>
                                                    <tr class="" style="max-width: 50px">
                                                        <th>@(i). @items.Category.category_content</th>
                                                    </tr>
                                                    @if (models.DepartmentReportDetails.Where(p => p.form_department_report_detail_id == items.form_department_report_detail_id).Count() > 0)
                                                    {
                                                        int inputIndex = 0;
                                                        foreach (var itemss in models.DepartmentReportDetails.Where(p => p.form_department_report_detail_id == items.form_department_report_detail_id).ToList())
                                                        {
                                                            inputIndex++;
                                                            <tr id="formInput-@items.category_id-@inputIndex">
                                                                <td>
                                                                    <input readonly type="text" value="@itemss.department_report_content" class="form-control" placeholder="Nhập nội dung mục báo cáo" id="noidung-@items.category_id-@inputIndex">
                                                                    <p hidden id="validation-noidung-@items.category_id-@inputIndex" class="text-danger" style="font-size: 12px; margin-left: 2px; margin-bottom: -15px"></p>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    <tr hidden id="append-@items.category_id"></tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                            }
                            <input hidden id="lstCategory" value="@lstId.Substring(0, lstId.Length - 1)" />
                            <div class="section-title mt-3" style="font-weight:bold">
                                <label>@(((char) (++j)).ToString()). MINH CHỨNG</label>
                            </div>
                            <hr />
                            <div class="col-12">
                                <div class="card" style="background-color: #e9ecef">
                                    <div class="card-body">
                                        <div class="chat">
                                            @foreach (var comment in models.Comments.Where(x => x.department_report_id == idDepartmentReport).ToList())
                                            {
                                                <div class="chat-header clearfix">
                                                    <img alt="image" src="~/assets/img/user.png" class="rounded-circle img-fluid">
                                                    <div class="chat-about">
                                                        <div class="chat-time form-inline">
                                                            <div class="chat-with" style="font-style:oblique">@models.AspNetUsers.FirstOrDefault(n => n.Id.Equals(comment.account_id)).Email</div>
                                                            &emsp;
                                                            @comment.comment_date
                                                        </div>
                                                        <div class="chat-text">@comment.comment_content</div>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        <hr />
                                        <h4>Viết bình luận .... <span class="fas fa-pen" style="font-size:1.2rem"></span></h4>
                                        @using (Html.BeginForm("PostComment", "Comments", FormMethod.Post))
                                        {
                                            <input type="hidden" name="id" value="@idDepartmentReport" />
                                            <div class="form-group">
                                                <textarea class="form-control" name="CommentText" style="height:200px !important"></textarea>
                                            </div>
                                            <div class="text-right mt-3">
                                                <button class="btn btn-primary" type="submit">
                                                    Gửi
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


