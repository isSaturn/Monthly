@model MonthlyStatement.Models.PersonalReport
@using MonthlyStatement.Models
@{
    ViewBag.Title = "PersonalDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
    int j = 64;
    string lstId = "";

    CP25Team04Entities models = new CP25Team04Entities();
    int idperiod = Model.report_period_id;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h4 class="text-white" style="font-size:1.75rem">Báo cáo cá nhân</h4>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            @foreach (var items in models.FormPersonalReports.FirstOrDefault(f => f.report_period_id == idperiod).FormPersonalReportDetails.ToList())
                            {
                                if (items.Category.category_of_id == null)
                                {
                                    i = 0;
                                    j++;
                                    <br />
                                    <div class="section-title mt-1" style="font-weight:bold">
                                        @(((char) j).ToString()). @items.Category.category_content.ToUpper()

                                    </div>
                                }
                                else
                                {
                                    lstId += items.category_id + "-";
                                    i++;
                                    <div class="section-title mt-0 row" style="margin-bottom:1px; padding-left:0.25rem">
                                        <div class="col-lg-12">
                                            <input hidden id="dem-@items.category_id" value="@models.PersonalReportDetails.Where(p => p.form_personal_report_detail_id == items.form_personal_report_detail_id).Count()" />
                                            <input hidden id="frmPerDetail-@items.category_id" value="@items.form_personal_report_detail_id" />
                                            <table class="table table-bordered dataTable">
                                                <tbody>
                                                    <tr class="" style="max-width: 50px">
                                                        <th>@(i). @items.Category.category_content</th>
                                                    </tr>
                                                    @if (models.PersonalReportDetails.Where(p => p.form_personal_report_detail_id == items.form_personal_report_detail_id).Count() > 0)
                                                    {
                                                        int inputIndex = 0;
                                                        foreach (var itemss in models.PersonalReportDetails.Where(p => p.form_personal_report_detail_id == items.form_personal_report_detail_id).ToList())
                                                        {
                                                            inputIndex++;
                                                            <tr id="formInput-@items.category_id-@inputIndex">
                                                                <td>
                                                                    <input readonly type="text" value="@itemss.personal_report_content" class="form-control" placeholder="Nhập nội dung mục báo cáo" id="noidung-@items.category_id-@inputIndex">
                                                                    <p hidden id="validation-noidung-@items.category_id-@inputIndex" class="text-danger" style="font-size: 12px; margin-left: 2px; margin-bottom: -15px"></p>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    <tr hidden id="append-@items.category_id"></tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                }
                            }
                            <input hidden id="lstCategory" value="@lstId.Substring(0, lstId.Length - 1)" />
                            <div class="section-title mt-3" style="font-weight:bold">
                                <label>@(((char) (++j)).ToString()). MINH CHỨNG</label>
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="minhChungFile" aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Chọn file minh chứng</label>
                                </div>
                                <p hidden id="validation-file" class="text-danger" style="font-size: 12px; margin-left: 2px; margin-bottom: -15px"></p>
                            </div>
                            <div class="text-right mt-3">
                                <button id="btnSubmit" role="button" class="btn btn-primary">Lưu báo cáo</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


