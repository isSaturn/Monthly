@model IEnumerable<MonthlyStatement.Models.FormStaffReportDetail>
@using MonthlyStatement.Models

@{
    ViewBag.Title = "FormStaffDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
    int j = 64;

}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h4 class="text-white" style="font-size:1.75rem">Báo cáo nhân viên</h4>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div id="accordion">
                                    @foreach (var item in Model.Where(c => c.Category.category_of_id == null).ToList())
                                    {
                                        i = 0;
                                        j++;

                                        <div class="accordion">
                                            <div class="card-header collapsed" role="button" data-toggle="collapse" data-target="" aria-expanded="false">
                                                <h4>
                                                    @(((char) j).ToString()). @item.Category.category_content
                                                </h4>
                                                <div class="card-header-action">
                                                    <a data-collapse="#panel-body-@(((char) j).ToString())" class="btn btn-icon" href="#"><i class="fas fa-plus"></i></a>
                                                </div>
                                            </div>
                                            <div class="accordion-body collapse" id="panel-body-@(((char) j).ToString())" data-parent="#accordion" style="">
                                                <div class="table-responsive">
                                                    <table class="table table-striped" style="border-collapse:unset" id="table-2">
                                                        <tbody>
                                                            @if (Model.Where(c => c.Category.category_of_id == item.Category.category_id).Count() > 0)
                                                            {
                                                                foreach (var items in Model.Where(c => c.Category.category_of_id == item.category_id).ToList())
                                                                {
                                                                    i++;

                                                                    <tr>
                                                                        <td class="text-center" style="width:3%">
                                                                            @(i)
                                                                        </td>
                                                                        <td>
                                                                            @items.Category.category_content
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                        </td>
                                                                        <td>
                                                                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Vui lòng nhập thông tin" disabled>
                                                                        </td>
                                                                    </tr>
                                                                    foreach (var itemss in Model.Where(c => c.Category.category_of_id == items.category_id).ToList())
                                                                    {

                                                                        i++;

                                                                        <tr>
                                                                            <td class="text-center" style="width:3%">
                                                                                @(i)
                                                                            </td>
                                                                            <td>
                                                                                @itemss.Category.category_content
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>
                                                                            </td>
                                                                            <td>
                                                                                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Vui lòng nhập thông tin" disabled>
                                                                            </td>
                                                                        </tr>

                                                                    }
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    }

                                </div>

                            </form>
                            <div class="accordion">
                                <div class="card-header collapsed" role="button" data-toggle="collapse" data-target="" aria-expanded="false">
                                    <h4>
                                        @(((char) (++j)).ToString()). MINH CHỨNG
                                    </h4>
                                    <div class="card-header-action">
                                        <a data-collapse="#panel-body-Z" class="btn btn-icon" href="#"><i class="fas fa-plus"></i></a>
                                    </div>
                                </div>
                                <div class="accordion-body collapse" id="panel-body-Z" data-parent="#accordion" style="">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                        </div>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="minhChungFile" aria-describedby="inputGroupFileAddon01" disabled>
                                            <label class="custom-file-label" for="inputGroupFile01">Chọn file minh chứng</label>
                                        </div>
                                        <p hidden id="validation-file" class="text-danger" style="font-size: 12px; margin-left: 2px; margin-bottom: -15px"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
