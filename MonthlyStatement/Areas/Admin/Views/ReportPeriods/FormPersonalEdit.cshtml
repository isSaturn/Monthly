@model MonthlyStatement.Models.FormPersonalReport

@{
    ViewBag.Title = "FormPersonalEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary" style="height:100px">
                        <h4 class="text-white" style="font-size:1.75rem">Báo cáo cá nhân: @Model.ReportPeriod.report_period_name</h4>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Tên người tạo mẫu báo cáo</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Nhập tên người tạo">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Tên mẫu báo cáo</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Nhập mẫu báo cáo">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Chọn danh mục</label>
                                    <select class="form-control" id="exampleFormControlSelect1">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                                <div class="text-right">
                                    <button class="btn btn-primary mr-1" type="submit">Lưu</button>
                                    <button class="btn btn-danger" type="reset">Hủy</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

